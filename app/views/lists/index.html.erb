<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">

      <h1>List's</h1>

      <ul class="list-group">
        <% @lists.each do |list| %>
          <%= link_to list.name, list_path(list), class: 'list-group-item p-2 ml-1' %>
        <% end %>
      </ul>

      <%= link_to "Create a movie list", new_list_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<% @lists.each do |list| %>
  <div class="card-product">
    <%if list.photo.attached? %>
      <%= cl_image_tag(list.photo.key) %>
    <% else  %>
      <img src="<%= asset_path 'moviebg.jpg' %>">
    <% end %>
    <div class="card-product-infos">
      <h2><%= link_to list.name, list_path(list) %> </h2>
      <p>Product description with <strong>relevant info</strong> only.</p>
    </div>
  </div>
<% end %>
