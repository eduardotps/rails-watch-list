<div class="container py-5">

  <h2><%= @list.name %></h2>

  <span class="movie-tag"><%= pluralize(@list.movies.size, "movie") %></span>

  <p><% @list.bookmarks.each do |bookmark| %>
      <li class='list-group-item'><%= bookmark.comment %> <%= "Title: #{bookmark.movie.title}" %> <%= "Rating: #{bookmark.movie.rating}" %>
      <% end %>
    </p>

    <%= link_to "Back to list", lists_path, class: "btn btn-primary" %>

    <%= link_to "delete this list", list_path(@list), class: "btn btn-primary", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
    <%# add a movie %>

    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary"%>

  </div>
